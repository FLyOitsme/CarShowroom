<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarShowroom.CarDetailsPage"
             Title="Детали автомобиля"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Изображение -->
            <Border 
                StrokeThickness="1"
                Stroke="{StaticResource Gray200}"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Padding="16">
                <Image 
                    x:Name="CarImage"
                    Source="dotnet_bot.png"
                    Aspect="AspectFit"
                    HeightRequest="250" />
            </Border>

            <!-- Название -->
            <Label 
                x:Name="CarNameLabel"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="{StaticResource Black}"
                HorizontalOptions="Center" />

            <!-- Цена -->
            <Label 
                x:Name="PriceLabel"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="{StaticResource AdobeAccent}"
                HorizontalOptions="Center" />

            <!-- Разделитель -->
            <BoxView 
                HeightRequest="1" 
                Color="{StaticResource Gray200}" />

            <!-- Характеристики -->
            <Border 
                StrokeThickness="1"
                Stroke="{StaticResource Gray200}"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label 
                        Text="Характеристики"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Black}" />

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="12">
                        <Label 
                            Grid.Row="0" Grid.Column="0" 
                            Text="Марка:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="BrandLabel" 
                            Grid.Row="0" Grid.Column="1"
                            TextColor="{StaticResource Black}" />

                        <Label 
                            Grid.Row="1" Grid.Column="0" 
                            Text="Модель:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="ModelLabel" 
                            Grid.Row="1" Grid.Column="1"
                            TextColor="{StaticResource Black}" />

                        <Label 
                            Grid.Row="2" Grid.Column="0" 
                            Text="Год:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="YearLabel" 
                            Grid.Row="2" Grid.Column="1"
                            TextColor="{StaticResource Black}" />

                        <Label 
                            Grid.Row="3" Grid.Column="0" 
                            Text="Цвет:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="ColorLabel" 
                            Grid.Row="3" Grid.Column="1"
                            TextColor="{StaticResource Black}" />

                        <Label 
                            Grid.Row="4" Grid.Column="0" 
                            Text="Двигатель:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="EngineLabel" 
                            Grid.Row="4" Grid.Column="1"
                            TextColor="{StaticResource Black}" />

                        <Label 
                            Grid.Row="5" Grid.Column="0" 
                            Text="Объем:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="EngineVolumeLabel" 
                            Grid.Row="5" Grid.Column="1"
                            TextColor="{StaticResource Black}" />

                        <Label 
                            Grid.Row="6" Grid.Column="0" 
                            Text="Пробег:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="MileageLabel" 
                            Grid.Row="6" Grid.Column="1"
                            TextColor="{StaticResource Black}" />

                        <Label 
                            Grid.Row="7" Grid.Column="0" 
                            Text="Коробка:" 
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray600}" />
                        <Label 
                            x:Name="TransmissionLabel" 
                            Grid.Row="7" Grid.Column="1"
                            TextColor="{StaticResource Black}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Описание -->
            <Border 
                StrokeThickness="1"
                Stroke="{StaticResource Gray200}"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label 
                        Text="Описание"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Black}" />

                    <Label 
                        x:Name="DescriptionLabel"
                        FontSize="14"
                        TextColor="{StaticResource Gray500}" />
                </VerticalStackLayout>
            </Border>

            <!-- Кнопки действий -->
            <Grid ColumnDefinitions="*" Margin="0,20,0,0">
                <Button 
                    x:Name="CreateContractButton"
                    Text="Оформить продажу"
                    BackgroundColor="{StaticResource AdobeAccent}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Clicked="OnCreateContractClicked" />
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,12,0,0">
                <Button 
                    x:Name="EditButton"
                    Text="Редактировать"
                    BackgroundColor="{StaticResource Gray400}"
                    TextColor="White"
                    Clicked="OnEditClicked" />

                <Button 
                    x:Name="DeleteButton"
                    Text="Удалить"
                    BackgroundColor="#E91E63"
                    TextColor="White"
                    Clicked="OnDeleteClicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
