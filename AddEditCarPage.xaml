<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarShowroom.AddEditCarPage"
             Title="Добавить автомобиль"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <!-- Изображение -->
            <Border 
                StrokeThickness="1"
                Stroke="{StaticResource Gray200}"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Padding="16">
                <Image 
                    x:Name="CarImage"
                    Source="dotnet_bot.png"
                    Aspect="AspectFit"
                    HeightRequest="200" />
            </Border>

            <!-- Основная информация -->
            <Border 
                StrokeThickness="1"
                Stroke="{StaticResource Gray200}"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label 
                        Text="Основная информация"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Black}" />

                    <Picker 
                        x:Name="BrandPicker"
                        Title="Марка *"
                        TitleColor="{StaticResource Gray500}" />

                    <Picker 
                        x:Name="ModelPicker"
                        Title="Модель *"
                        TitleColor="{StaticResource Gray500}" />

                    <Entry 
                        x:Name="YearEntry"
                        Placeholder="Год *"
                        PlaceholderColor="{StaticResource Gray500}"
                        Keyboard="Numeric" />

                    <Entry 
                        x:Name="ColorEntry"
                        Placeholder="Цвет *"
                        PlaceholderColor="{StaticResource Gray500}" />

                    <Entry 
                        x:Name="PriceEntry"
                        Placeholder="Цена (₽) *"
                        PlaceholderColor="{StaticResource Gray500}"
                        Keyboard="Numeric" />
                </VerticalStackLayout>
            </Border>

            <!-- Технические характеристики -->
            <Border 
                StrokeThickness="1"
                Stroke="{StaticResource Gray200}"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label 
                        Text="Технические характеристики"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Black}" />

                    <Picker 
                        x:Name="EngineTypePicker"
                        Title="Тип двигателя *"
                        TitleColor="{StaticResource Gray500}" />

                    <Entry 
                        x:Name="EngineVolumeEntry"
                        Placeholder="Объем двигателя (л) *"
                        PlaceholderColor="{StaticResource Gray500}"
                        Keyboard="Numeric" />

                    <Entry 
                        x:Name="PowerEntry"
                        Placeholder="Мощность (л.с.)"
                        PlaceholderColor="{StaticResource Gray500}"
                        Keyboard="Numeric" />

                    <Entry 
                        x:Name="MileageEntry"
                        Placeholder="Пробег (км) *"
                        PlaceholderColor="{StaticResource Gray500}"
                        Keyboard="Numeric" />

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Switch 
                            x:Name="StockSwitch"
                            Grid.Column="0"
                            IsToggled="True"
                            VerticalOptions="Center" />
                        <Label 
                            Grid.Column="1"
                            x:Name="StockLabel"
                            Text="В наличии"
                            VerticalOptions="Center"
                            TextColor="{StaticResource Black}" />
                    </Grid>

                    <Picker 
                        x:Name="TransmissionPicker"
                        Title="Коробка передач *"
                        TitleColor="{StaticResource Gray500}" />

                    <Picker 
                        x:Name="CarTypePicker"
                        Title="Тип кузова *"
                        TitleColor="{StaticResource Gray500}" />

                    <Picker 
                        x:Name="ConditionPicker"
                        Title="Состояние *"
                        TitleColor="{StaticResource Gray500}" />

                    <Picker 
                        x:Name="WdTypePicker"
                        Title="Привод *"
                        TitleColor="{StaticResource Gray500}" />
                </VerticalStackLayout>
            </Border>


            <!-- Кнопки -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,20,0,0">
                <Button 
                    x:Name="SaveButton"
                    Text="Сохранить"
                    BackgroundColor="{StaticResource AdobeAccent}"
                    TextColor="White"
                    Clicked="OnSaveClicked" />

                <Button 
                    x:Name="CancelButton"
                    Text="Отмена"
                    BackgroundColor="{StaticResource Gray400}"
                    TextColor="White"
                    Clicked="OnCancelClicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
