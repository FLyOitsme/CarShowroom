<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:entities="clr-namespace:DataLayer.Entities"
             x:Class="CarShowroom.MainPage"
             Title="Каталог"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Заголовок -->
        <Border 
            Grid.Row="0"
            BackgroundColor="White"
            StrokeThickness="1"
            Stroke="{StaticResource Gray200}"
            Padding="24,16">
            <Label 
                Text="Автосалон"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="{StaticResource Black}" />
        </Border>

        <!-- Поиск -->
        <Border 
            Grid.Row="1"
            BackgroundColor="White"
            StrokeThickness="1"
            Stroke="{StaticResource Gray200}"
            Padding="16,12">
            <SearchBar 
                Placeholder="Поиск по марке, модели..."
                Text="{Binding SearchText}"
                BackgroundColor="Transparent" />
        </Border>

        <!-- Список автомобилей -->
        <CollectionView 
            x:Name="CarsCollectionView"
            Grid.Row="2"
            SelectionMode="Single"
            ItemsSource="{Binding Cars}"
            SelectedItem="{Binding SelectedCar}"
            SelectionChanged="OnCarSelected"
            BackgroundColor="Transparent">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="entities:Car">
                    <Border 
                        Margin="16,8"
                        Padding="0"
                        StrokeThickness="1"
                        Stroke="{StaticResource Gray200}"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 12">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CarSelectedCommand}" 
                                                  CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                        
                        <Grid Padding="16" RowDefinitions="Auto,Auto,Auto,Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Изображение -->
                            <Border 
                                Grid.Column="0"
                                Grid.RowSpan="4"
                                StrokeThickness="1"
                                Stroke="{StaticResource Gray200}"
                                BackgroundColor="{StaticResource Gray100}"
                                StrokeShape="RoundRectangle 8"
                                Padding="8">
                                <Image 
                                    Source="dotnet_bot.png"
                                    Aspect="AspectFill"
                                    HeightRequest="100"
                                    WidthRequest="100" />
                            </Border>

                            <!-- Информация -->
                            <Label 
                                Grid.Column="1"
                                Grid.Row="0"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="{StaticResource Black}"
                                Margin="12,0,0,8">
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0} {1} ({2})">
                                        <Binding Path="Model.Brand.Name" />
                                        <Binding Path="Model.Name" />
                                        <Binding Path="Year" />
                                    </MultiBinding>
                                </Label.Text>
                            </Label>

                            <Label 
                                Grid.Column="1"
                                Grid.Row="1"
                                Text="{Binding Color}"
                                FontSize="14"
                                TextColor="{StaticResource Gray900}"
                                Margin="12,0,0,8"
                                MaxLines="2" />

                            <HorizontalStackLayout 
                                Grid.Column="1"
                                Grid.Row="2"
                                Spacing="12"
                                Margin="12,0,0,8">
                                <Label 
                                    FontSize="12"
                                    TextColor="{StaticResource Gray900}">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0:F1} л">
                                            <Binding Path="EngVol" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                                <Label 
                                    Text="{Binding Transmission.Name}" 
                                    FontSize="12"
                                    TextColor="{StaticResource Gray900}" />
                                <Label 
                                    FontSize="12"
                                    TextColor="{StaticResource Gray900}">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0:N0} км">
                                            <Binding Path="Mileage" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                            </HorizontalStackLayout>

                            <Label 
                                Grid.Column="1"
                                Grid.Row="3"
                                FontSize="20"
                                FontAttributes="Bold"
                                TextColor="{StaticResource AdobeAccent}"
                                Margin="12,0,0,0">
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0:N0} ₽">
                                        <Binding Path="Cost" />
                                    </MultiBinding>
                                </Label.Text>
                            </Label>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Кнопка добавления -->
        <Button 
            Text="+"
            FontSize="32"
            WidthRequest="56"
            HeightRequest="56"
            CornerRadius="28"
            BackgroundColor="{StaticResource AdobeAccent}"
            TextColor="White"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="24"
            Command="{Binding AddCarCommand}" />
    </Grid>

</ContentPage>
